<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include("./partials/head.ejs") %> 
<body>
    <%- include("./partials/header.ejs") %> 

    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
          <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-2">Runners Page</h1>
            <div class="row center">
              <h5 class="header col s12 light ">A directory of Running Races</h5>
            </div>
            <div class="row center">
              <!-- <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">Get Started</a> -->
            </div>
            <br><br>
    
          </div>
        </div>
        <div class="parallax"><img id="banner" src="/static/images/banner5.jpg" alt="banner"></div>
      </div>
    
 
     <div class="container">
       <div class="row">
        <div class="col s12 m12 l12">

          <h2 class="teal-text text-darken-3"><%=event.name %> </h2>
          <div class="valign wrapper">

            <span>  <i class=" tiny material-icons">location_on</i> <%= event.location %></span>
            <span>  <i class=" tiny material-icons">date_range</i> <%= event.date %> </span>
            <span>  <i class=" tiny material-icons">directions_run</i> 5k, 10k, Half, Full </span>
            
            <% if(user){ %>
              <span class="right align">Out of Date? <a class="waves-effect waves-light btn" href="/edit/<%=event._id%>">Edit This Event</a></span>
            <%} else{ %>
              <span class="right align"> <a href="/auth/google"><i class=" material-icons left">vpn_key</i> Out of Date? Log in to Edit This Event</a></span>
            <%} %> 
          </div>
         
            
            <img class="test-test z-depth-5" src="<%=event.image %> " alt="">
            <br>
            <h3>Join the <%=event.name%></h3>
            <div  class="row">
              <div class="col s8">
                <blockquote>
                  <p class="flow-text"><%=event.description %> </p>
                </blockquote>
              </div>
              <div class="col s4">
                <div class="card-panel ">
                  <div class="row"> 
                    <h5><%=event.name %> </h5>
                    <% for(i=5; i<0; i++){%>
                      <p></p>
                    <%} %> 
                    <span class="black-text">I am a very simple card. I am good at containing small bits of information.
                      I am convenient because I require little markup to use effectively. I am similar to what is called a panel in other frameworks.
                    </span>
                  </div>
                  

                  <a class="waves-effect waves-light btn-large">Button</a>
                </div>
              </div>
            </div>
            
          
    
    
    
    
          <% if(user){ %>
            <form action="/show/<%=event._id%>?_method=DELETE" method="POST">
              <input class="delete-btn" type="submit" value="DELETE" />
            </form>
            <a href="/edit/<%=event._id%>">Edit this product</a>
          <%} else{%> 
          
            <a href="/auth/google"><i class=" material-icons left">vpn_key</i>Log in With Google</a>
          <% } %> 
        </div>
       </div>
       <h2>Location</h2>
       <div id="map"></div>
 

       
       <br>
       <br>
       <br>
       
     </div>
     
     <script type="text/javascript">
      window.onload=function(){
     var map = L.map("map");
     L.tileLayer("http://{s}.tile.osm.org/{z}/{x}/{y}.png").addTo(map);
     map.setView([<%=event.latlng[0]%>, <%=event.latlng[1]%>], 13);
    var marker = L.marker([<%=event.latlng[0]%>, <%=event.latlng[1]%>]).addTo(map).bindPopup('<a href="<%=event.source%>"><%=event.name%></a>');
    L.control.layers(null, overlays, {
         collapsed: false
    }).addTo(map);
  
      }
  
        </script> 
</body>
</html>
