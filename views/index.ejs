<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include("./partials/head.ejs") %> 
<body>
    <%- include("./partials/header.ejs") %> 

    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
          <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-2">Runners Page</h1>
            <div class="row center">
              <h5 class="header col s12 light ">A directory of Running Races</h5>
            </div>
            <div class="row center">
              <!-- <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">Get Started</a> -->
            </div>
            <br><br>
    
          </div>
        </div>
        <div class="parallax"><img id="banner" src="/images/banner5.jpg" alt="banner"></div>
      </div>
     <br>
     <br>

     
        <% events.forEach((event)=>{ %>
 
          <div class="row">
            <div class="col s16 m7">
              <div class="card">
                <div class="card-image">
                  <img src="<%=event.image %> ">
                </div>
                <div class="card-content">
                  <span class="card-title"><%=event.name%> </span>
                  <p>I am a very simple card. I am good at containing small bits of information.
                  I am convenient because I require little markup to use effectively.</p>
                </div>
                <div class="card-action">
                  <a href="/<%=event._id %> ">More Information</a>
                </div>
              </div>
            </div>
          </div>
             
    
        <%}) %> 
  


</body>
</html>